{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": [
			".next",
			"node_modules",
			".terraform",
			"out"
		]
	},
	"organizeImports": {
		"enabled": true,
		"ignore": [
			".next",
			"node_modules",
			".terraform",
			"out"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			}
		},
		"ignore": [
			".next",
			"node_modules",
			".terraform",
			"out"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
